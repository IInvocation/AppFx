@using FluiTec.AppFx.Identity.Entities
@using System.Linq
@using FluiTec.AppFx.AspNetCore.Examples.AuthExample.Resources.Views.Shared
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUserEntity> SignInManager
@inject IHtmlLocalizer<ExternalLoginResource> Localizer
@{
    var loginProviders = (await SignInManager.GetExternalAuthenticationSchemesAsync()).ToList();
    if (loginProviders.Count > 0)
    {
        <cache vary-by="@System.Globalization.CultureInfo.CurrentUICulture.Name" expires-after="@TimeSpan.FromHours(12)">
            <section>
                <h4>@Localizer.GetString(() => ExternalLoginResource.ExternalLoginDescription)</h4>
                <hr />
                <form asp-controller="Account" asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                    <div class="row uniform" style="margin-left: 0">
                        <ul class="actions">
                            @foreach (var provider in loginProviders)
                            {
                            <li>
                                
                                <input type="submit" style="padding-left:40px" class="btn btn-default @provider.Name-btn" name="provider" value="@provider.Name" title="@Localizer.GetString(() => ExternalLoginResource.ExternalLoginProviderDescription, provider.DisplayName)" />
                            </li>                                                                                                                                                                                             
                            }
                        </ul>
                    </div>
                </form>
            </section>
        </cache>
    }
}