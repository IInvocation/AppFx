@using FluiTec.AppFx.AspNetCore.Examples.AuthExample.Resources.Views.Shared
@inject IHtmlLocalizer<HeadResource> Localizer

<cache vary-by="@System.Globalization.CultureInfo.CurrentUICulture.Name" expires-after="@System.TimeSpan.FromHours(value: 12)">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no" />
    <meta name="author" content="Achim Schnell" />
    <meta name="description" content="authentication-sample" />
    @if (string.IsNullOrWhiteSpace(ViewBag.Title))
    {
        <title>@Localizer.GetString(() => HeadResource.ApplicationName)</title>
    }
    else
    {
        <title>@ViewBag.Title</title>
    }
    <!--CSS Templates-->
    <environment names="Development">
        <link rel="stylesheet" href="/css/bootstrap.min.css" />
        <link rel="stylesheet" href="/css/modern-business.css" />
        <link rel="stylesheet" href="/css/custom.css" />
        <link rel="stylesheet" href="/css/font-awesome.min.css" />
    </environment>
    <environment names="Stating,Production">
        <link rel="stylesheet" href="/css/bootstrap.min.css" />
        <link rel="stylesheet" href="/css/modern-business.min.css" />
        <link rel="stylesheet" href="/css/custom.min.css" />
        <link rel="stylesheet" href="/css/font-awesome.min.css" />
    </environment>
    <!--Icons-->
    <link rel="shortcut icon" href="favicon.ico">
    <link rel="icon" type="image/png" href="/icons/favicon_32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="/icons/favicon_96.png" sizes="96x96">
    <link rel="apple-touch-icon" sizes="180x180" href="/icons/apple-touch-icon.png">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="/icons/mstile-144x144.png">
</cache>