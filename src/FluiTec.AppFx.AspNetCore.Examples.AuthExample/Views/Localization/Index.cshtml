@model FluiTec.AppFx.AspNetCore.Examples.AuthExample.Models.PageableModel<FluiTec.AppFx.AspNetCore.Examples.AuthExample.Models.Localization.ResourceGroup>

<section id="maincontent" class="wrapper content-wrapper">
    <header>
        <h2>Localization</h2>
    </header>
    <!--Content-->
    <div class="container">
        <section>
            <h3>Resource groups</h3>
            @Html.Partial("_PageNavigation", Model)
            @if (Model != null && Model.Items.Any())
            {
                <ul class="list-group">
                @foreach (var group in Model.Items)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @group.Name
                        <span class="badge badge-primary badge-pill">@group.Entries</span>
                    </li>
                }
                </ul>
            }
            else
            {
                <p>No localizations available.</p>
            }
        </section>
    </div>
</section>