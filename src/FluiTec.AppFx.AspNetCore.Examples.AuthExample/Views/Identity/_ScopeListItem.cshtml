@model FluiTec.AppFx.AspNetCore.Examples.AuthExample.Models.Identity.ScopeModel

@if (Model.Checked)
{
    if (Model.Required)
    {
        <input id="scopes_@Model.Name" name="ScopesConsented" type="checkbox" value="@Model.Name" checked disabled/>
    }
    else
    {
        <input id="scopes_@Model.Name" name="ScopesConsented" type="checkbox" value="@Model.Name" checked />
    }
}
else
{
    <input id="scopes_@Model.Name" name="ScopesConsented" value="@Model.Name" type="checkbox" />
}

<label for="scopes_@Model.Name">@Model.DisplayName</label>
@if (Model.Required)
{
    <p>This scope is required.</p>
}
@if (Model.Description != null)
{
    <label for="scopes_@Model.Name">@Model.Description</label>
}
@if (Model.Required)
{
    <input type="hidden" name="ScopesConsented" value="@Model.Name" />
}