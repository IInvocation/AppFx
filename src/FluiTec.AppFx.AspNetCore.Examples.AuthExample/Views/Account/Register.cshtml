@using FluiTec.AppFx.AspNetCore.Examples.AuthExample.Resources.Views.Account
@using FluiTec.AppFx.Identity.Entities
@using FluiTec.AppFx.Identity.Models.AccountViewModels
@using Microsoft.AspNetCore.Identity
@model RegisterViewModel
@inject SignInManager<IdentityUserEntity> SignInManager
@inject IHtmlLocalizer<RegisterResource> Localizer

<section id="maincontent" class="wrapper content-wrapper">
    <header>
        <h2>@Localizer.GetString(() => RegisterResource.RegisterHeader)</h2>
    </header>
    <!--Content-->
    <div class="container">
        <section>
            <h4>@Localizer.GetString(() => RegisterResource.LocalAccountHeader)</h4>
            <hr />
            <form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData[" ReturnUrl"]" method="post">
                <div asp-validation-summary="All" class="text-danger" data-vlmsg-summary="true"></div>
                <div class="row uniform">
                    <div class="col-lg-6">
                        <input asp-for="Email" placeholder="@Localizer.GetString(() => RegisterResource.EmailPlaceHolder)" data-rule-required="true" data-msg-required="@Localizer.GetString(() => RegisterResource.EmailRequired)" />
                    </div>
                </div>
                <div class="row uniform">
                    <div class="col-lg-6">
                        <input asp-for="Name" placeholder="@Localizer.GetString(() => RegisterResource.NamePlaceHolder)" data-rule-required="true" data-msg-required="@Localizer.GetString(() => RegisterResource.NameRequired)"/>
                    </div>
                </div>
                <div class="row uniform">
                    <div class="col-lg-6">
                        <input asp-for="Phone" placeholder="@Localizer.GetString(() => RegisterResource.PhonePlaceHolder)" data-rule-required="true" data-msg-required="@Localizer.GetString(() => RegisterResource.PhoneRequired)"/>
                    </div>
                </div>
                <div class="row uniform">
                    <div class="col-lg-6">
                        <input asp-for="Password" placeholder="@Localizer.GetString(() => RegisterResource.PasswordPlaceholder)" data-rule-required="true" data-msg-required="@Localizer.GetString(() => RegisterResource.PasswordRequired)" />
                    </div>
                </div>
                <div class="row uniform">
                    <div class="col-lg-6">
                        <input asp-for="ConfirmPassword" placeholder="@Localizer.GetString(() => RegisterResource.ConfirmPasswordPlaceHolder)" data-rule-required="true" data-msg-required="@Localizer.GetString(() => RegisterResource.ConfirmPasswordRequired)" />
                    </div>
                </div>
                <div class="row uniform">
                    <div class="col-lg-6">
                        <ul class="actions">
                            <li>
                                <input type="submit" value="@Localizer.GetString(() => RegisterResource.RegisterButton)" />
                            </li>
                            <li>
                                <input type="reset" value="@Localizer.GetString(() => RegisterResource.ResetButton)" />
                            </li>
                        </ul>
                    </div>
                </div>
            </form>
        </section>
        @Html.Partial("_ExternalLogin")
    </div>
</section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
