@using FluiTec.AppFx.AspNetCore.Examples.AuthExample.Resources.Views.Account
@using FluiTec.AppFx.Identity.Entities
@using Microsoft.AspNetCore.Identity
@model FluiTec.AppFx.Identity.Models.AccountViewModels.LoginViewModel
@inject SignInManager<IdentityUserEntity> SignInManager
@inject IHtmlLocalizer<LoginResource> Localizer

<section id="maincontent" class="wrapper content-wrapper">
    <header>
        <h2>@Localizer.GetString(() => LoginResource.LoginHeader)</h2>
    </header>
    <div class="container">
        <h4>@Localizer.GetString(() => LoginResource.LocalAccountHeader)</h4>
        <hr />
        <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <div asp-validation-summary="All" class="text-danger" data-vlmsg-summary="true"></div>
            <div class="row uniform">
                <div class="col-lg-6">
                    <input asp-for="Email" placeholder="@Localizer.GetString(() => LoginResource.EmailPlaceHolder)" data-rule-required="true" data-msg-required="@Localizer.GetString(() => LoginResource.EmailRequired)" />
                </div>
            </div>
            <div class="row uniform">
                <div class="col-lg-6">
                    <input asp-for="Password" placeholder="@Localizer.GetString(() => LoginResource.PasswordPlaceholder)" data-rule-required="true" data-msg-required="@Localizer.GetString(() => LoginResource.PasswordRequired)" />
                </div>
            </div>
            <div class="row uniform">
                <div class="col-lg-6">
                    <input asp-for="RememberMe" />
                    <label asp-for="RememberMe"></label>
                </div>
            </div>
            <div class="row uniform">
                <div class="col-lg-6">
                    <ul class="actions">
                        <li>
                            <input type="submit" value="Anmelden" />
                        </li>
                        <li>
                            <input type="reset" value="Zurücksetzen" />
                        </li>
                    </ul>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
