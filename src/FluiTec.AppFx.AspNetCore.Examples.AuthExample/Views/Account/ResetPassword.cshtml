@using FluiTec.AppFx.AspNetCore.Examples.AuthExample.Resources.Views.Account
@using FluiTec.AppFx.Identity.Models.AccountViewModels
@model ResetPasswordViewModel
@inject IHtmlLocalizer<ResetPasswordResource> Localizer

<section id="maincontent" class="wrapper content-wrapper">
    <header>
        <h2>@Localizer.GetString(() => ResetPasswordResource.ResetPasswordHeader)</h2>
    </header>
    <!--Content-->
    <div class="container">
        <section>
            <h4>@Localizer.GetString(() => ResetPasswordResource.ResetPasswordHeader)</h4>
            <hr />
            <form asp-controller="Account" asp-action="ResetPassword" method="post">
                <div asp-validation-summary="All" class="text-danger" data-vlmsg-summary="true"></div>
                <input asp-for="Code" type="hidden" />
                <div class="row uniform">
                    <div class="col-lg-6">
                        <input asp-for="Email" placeholder="@Localizer.GetString(() => ResetPasswordResource.EmailPlaceHolder)" data-rule-required="true" data-msg-required="@Localizer.GetString(() => ResetPasswordResource.EmailRequired)" />
                    </div>
                </div>
                <div class="row uniform">
                    <div class="col-lg-6">
                        <input asp-for="Password" placeholder="@Localizer.GetString(() => ResetPasswordResource.PasswordPlaceholder)" data-rule-required="true" data-msg-required="@Localizer.GetString(() => ResetPasswordResource.PasswordRequired)" />
                    </div>
                </div>
                <div class="row uniform">
                    <div class="col-lg-6">
                        <input asp-for="ConfirmPassword" placeholder="@Localizer.GetString(() => ResetPasswordResource.ConfirmPasswordPlaceHolder)" data-rule-required="true" data-msg-required="@Localizer.GetString(() => ResetPasswordResource.ConfirmPasswordRequired)" />
                    </div>
                </div>
                <div class="row uniform">
                    <div class="col-lg-6">
                        <ul class="actions">
                            <li>
                                <input type="submit" value="@Localizer.GetString(() => ResetPasswordResource.SubmitButton)" />
                            </li>
                        </ul>
                    </div>
                </div>
            </form>
        </section>
    </div>
</section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
