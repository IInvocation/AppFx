@using FluiTec.AppFx.AspNetCore.Examples.AuthExample.Resources.Views.Account
@inject IHtmlLocalizer<ForgotPasswordConfirmationResource> Localizer

<cache vary-by="@System.Globalization.CultureInfo.CurrentUICulture.Name" expires-after="@TimeSpan.FromHours(12)">
    <section id="maincontent" class="wrapper content-wrapper">
        <header>
            <h2>@Localizer.GetString(() => ForgotPasswordConfirmationResource.Header)</h2>
        </header>
        <div class="container">
            <section>
                <div class="row uniform">
                    <p>@Localizer.GetString(() => ForgotPasswordConfirmationResource.Text)</p>
                </div>
            </section>
        </div>
    </section>
</cache>