@using RazorLight
@inherits TemplatePage<FluiTec.AppFx.AspNetCore.Examples.AuthExample.Models.Mail.RecoverPasswordMailModel>
<html>
@{ await IncludeAsync("/Shared/_Style.cshtml", Model); }
<body>
    <p></p>
    <table width="700" align="center" cellspacing="0" cellpadding="15" style="border: 1px #808080 solid; background: #fff;">
        <tr>
            <td>
                <p style="text-align: center; font-family: Verdana, Arial, Helvetica, sans-serif; font-size: 20px; color: #e0555a;">@Model.ApplicationName</p>
            </td>
        </tr>
        <tr>
            <td style="border-bottom: 5px #646464 solid; border-top: 5px #646464 solid; padding: 10px; background-color: #646464">
                <p style="font-family: Verdana, Arial, Helvetica, sans-serif; font-size: 18px; font-weight: bold; color: #FFFFFF" align="center">@Model.Header</p>
                <p style="font-family: Verdana, Arial, Helvetica, sans-serif; font-size: 14px; font-weight: bold; color: #FFFFFF" align="center">
                    <i>Setzen Sie Ihr Passwort zurück</i>
                </p>
            </td>
        </tr>
        <tr>
            <td>
                <p style="font-family: Verdana, Arial, Helvetica, sans-serif; font-size: 12px; color: #435058;">
                    Hallo,<br />
                    Sie haben um Rücksetzung Ihres Passworts unter @Model.ApplicationName gebeten.<br />
                    Um Ihr Passwort jetzt zurückzusetzen, folgen Sie bitte folgendem Link: <a href="@Model.ValidationUrl">@Model.ConfirmLinkText</a>.
                </p>
            </td>
        </tr>
        <tr>
            <td>
                <p style="font-family: Verdana, Arial, Helvetica, sans-serif; font-size: 12px; color: #435058;">
                    Sie erhalten diese Nachricht, da unter @Model.ApplicationName darum gebeten wurde.<br />
                    Falls Sie nicht um Zurücksetzung gebeten haben - ignorieren Sie bitte diese Nachricht.
                </p>
            </td>
        </tr>
        <tr>
            <td>
                <p style="font-family: Verdana, Arial, Helvetica, sans-serif; font-size: 12px; color: #435058;">
                    Vielen Dank. Ihr Team von @Model.ApplicationName.
                </p>
            </td>
        </tr>
    </table>
    <p style="text-align: center; font-family: Verdana, Arial, Helvetica, sans-serif; font-size: 11px; color: #435058;">
        &copy; @Model.ApplicationName<br /><a href="@Model.ApplicationUrl" target="_blank">@Model.ApplicationUrlDisplay</a>
    </p>
</body>
</html>