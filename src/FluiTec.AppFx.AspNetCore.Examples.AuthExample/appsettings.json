{
  // logging
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "RollingFileAlternate",
        "Args": {
          "logDirectory": ".\\logs",
          "fileSizeLimitBytes": 1048576,
          "buffered": "true"
        }
      }
    ]
  },
  // statuscode
  "StatusCode": {
    "SelfHandledCodes": [
      404
    ]
  },
  // error
  "Error": {
    "ErrorRecipient": "" // environment
  },
  // data
  "Dapper": {
    "ConnectionString": "" // secret
  },
  // api
  "Api": {
    "ApiOnlyPath": "/api"
  },
  // admin
  "Admin": {
    "ConfirmationRecipient": "Admin", // Admin|User
    "AdminConfirmationRecipient": "" // secret
  },
  // identity
  "IdentityOptions": {
    "Provider": "MSSQL"
  },
  // authentication --> secret
  // identityServer
  "IdentityServerOptions": {
    "Provider": "MSSQL"
  },
  "Signing": {
    "RolloverDays": "60",
    "ValidationValidDays": "120"
  },
  // authorization
  "ActivityAuthorizationOptions": {
    "Provider": "MSSQL"
  },
  // localization
  "DbLocalizationOptions": {
    "Provider": "MSSQL"
  },
  "Localization": {
    "DefaultCulture": "en",
    "SupportedCultures": [
      "en",
      "de"
    ]
  },
  // mail
  "MailOptions": {
    "SmtpServer": "", // secret
    "SmtpPort": "25",
    "EnableSsl": "false",
    "Username": "", // secret
    "Password": "", // secret
    "FromMail": "", // secret
    "FromName": "ApplicationName"
  },
  // staticFile
  "StaticFiles": {
    "CacheDuration": "29030400" // 2 weeks
  },
  // captcha
  "Captcha": {
    "Key": "", // secret
    "Secret": "" // secret
  },
  // operator
  "Operator": {
    "Enterprise": "", // secret
    "Street": "", // secret
    "ZipCode": "", // secret
    "City": "", // secret
    "Phone": "", // secret
    "HomepageDisplay": "", // secret
    "Homepage": "", // secret
    "MailAddressDisplay": "", // secret
    "MailAddress": "", // secret
    "PrivacyMailAddressDisplay": "", // secret
    "PrivacyMailAddress": "" // secret
  },
  // application
  "ApplicationOptions": {
    "ApplicationRootDisplay": "", // secret
    "ApplicationRoot": "", // secret
    "ApplicationLoginPath": "", // secret
    "ApplicationLoginDisplay": "", // secret
    "ApplicationLogin": "" // secret
  } 
}